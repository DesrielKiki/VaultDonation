<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="memberWithDonationData"
            type="com.desrielkiki.vaultdonation.data.entity.relation.MemberWithDonationData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/background_shape_editext"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_donationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title12"
            android:text="Donation Date" />

        <TextView
            android:id="@+id/tv_donationDate"
            android:layout_width="wrap_content"
            style="@style/body10"
            android:layout_below="@id/title_donationDate"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_donationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title12"
            android:layout_below="@id/tv_donationDate"
            android:text="Donation Type" />

        <TextView
            android:id="@+id/tv_donationType"
            style="@style/body10"
            android:layout_below="@id/title_donationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>